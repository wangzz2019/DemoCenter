      function getCurrentYMD() {
        var now = new Date(Date.now() + ((new Date().getTimezoneOffset() + (9 * 60)) * 60 * 1000));
        //数字の2桁表記関数
        function padZero(num) {
          return (num < 10 ? "0" : "") + num;
        }
        var YMD = now.getFullYear()+15 + "-" +padZero(now.getMonth() + 5) + "-" +padZero(now.getDate())　//YYYY-MM-DD
        return YMD;
      }
